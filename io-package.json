    "compact": true,
    "stopTimeout": 5000,
    "dependencies": [
      {
        "js-controller": ">=2.0.0"
      }
    ],
    "globalDependencies": [
      {
        "admin": ">=5.0.0"
      }
    ],
    "restartAdapters": [
      "web"
    ],
    "plugins": {
      "sentry": {
        "dsn": "https://3f4953a5e15d4ff2a381affb010d0778@sentry.iobroker.net/170"
      }
    }
  },
  "native": {
    "port": 8084,
    "auth": false,
    "secure": false,
    "bind": "0.0.0.0",
    "ttl": 3600,
    "certPublic": "",
    "certPrivate": "",
    "certChained": "",
    "defaultUser": "admin",
    "leEnabled": false,
    "leUpdate": false,
    "leCheckPort": 80
